<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="ForD"
            android:textColor="#5140E2"
            android:textSize="50dp"
            android:textStyle="normal"
            android:fontFamily="@font/gmarketsans_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="회원가입"
            android:fontFamily="@font/gmarketsans_medium"
            android:textColor="#3E3E3E"
            android:textSize="25dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/checkBox_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 전체 동의"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text2"
            tools:ignore="MissingConstraints"
            android:buttonTint="#000000"/>
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkBox_all"
            tools:ignore="MissingConstraints"
            android:buttonTint="#000000"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_box"
            android:fontFamily="@font/gmarketsans_medium"
            android:padding="20dp"
            android:text="약관 동의 내용"
            android:textColor="#3E3E3E"
            android:textSize="10dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkBox1"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text3"
            tools:ignore="MissingConstraints"
            android:buttonTint="#000000"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_box"
            android:fontFamily="@font/gmarketsans_medium"
            android:padding="20dp"
            android:text="약관 동의 내용"
            android:textColor="#3E3E3E"
            android:textSize="10dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkBox2"
            tools:ignore="MissingConstraints" />
        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text4"
            tools:ignore="MissingConstraints"
            android:buttonTint="#000000"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/login_box"
            android:fontFamily="@font/gmarketsans_medium"
            android:padding="20dp"
            android:text="약관 동의 내용"
            android:textColor="#3E3E3E"
            android:textSize="10dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkBox3"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,1:3.5"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/button_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text5"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/button_background2"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintDimensionRatio="W,1:3.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_ok"
            app:layout_constraintTop_toBottomOf="@id/text5"
            tools:ignore="MissingConstraints" />









    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
