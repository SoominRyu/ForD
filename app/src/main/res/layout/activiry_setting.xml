<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity1"
    android:background="#E2E2E2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--  상단바  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/top"
            android:background="@color/white"
            android:paddingTop="40dp"
            android:gravity="left|center_vertical"

            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="14dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="환경설정"
                android:textColor="#25235A"
                android:textSize="26dp"
                android:fontFamily="@font/scdream7"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:id="@+id/middle"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintVertical_bias="1.0"
            >
            <!--  음성안내  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:id="@+id/middle_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="음성 안내"
                        android:textColor="#3E3E3E"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="경고 메세지를 음성으로 안내합니다."
                        android:textColor="#777777"
                        android:textSize="5pt" />
                </LinearLayout>
                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    android:switchMinWidth="0dp"/>
            </LinearLayout>

            <!--  HUD 사용  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/middle_2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    >
                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="HUD 사용"
                        android:textColor="#3E3E3E"
                        android:textSize="8pt"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="HUD 기능과 함께 ForD를 이용합니다."
                        android:textColor="#777777"
                        android:textSize="5pt" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:checked="false"
                    android:switchMinWidth="20dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector" />
            </LinearLayout>

            <!--  출발지를 내 위치로  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/middle_3"
                    >

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="출발지를 내 위치로"
                        android:textColor="#3E3E3E"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/gmarketsans_medium"
                        android:gravity="center"
                        android:text="길찾기 출발지를 항상 내 위치로 설정합니다."
                        android:textColor="#777777"
                        android:textSize="5pt" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:checked="false"
                    android:switchMinWidth="20dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector" />
            </LinearLayout>

            <!--  이용 약관 및 정책 확인하기  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/middle_4"
                android:gravity="left|center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:layout_marginLeft="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="이용 약관 및 정책 확인하기"
                    android:textColor="#3E3E3E"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="33dp"
                    android:src="@drawable/next"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>

            <!--  버전 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:gravity="center"
                    android:text="버전"
                    android:textColor="#3E3E3E"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:gravity="center"
                    android:text="현재 버전 1.0.0"
                    android:textColor="#777777"
                    android:textSize="5pt" />
                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:fontFamily="@font/gmarketsans_medium"
                    android:gravity="center"
                    android:text="최신 버전 1.0.0"
                    android:textColor="#777777"
                    android:textSize="5pt" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>