<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity"
    android:background="#E2E2E2"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Joinlayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/top"
            android:background="@color/white"
            android:paddingTop="40dp"
            android:gravity="left|center_vertical"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="마이페이지"
                android:textColor="#25235A"
                android:textSize="26dp"
                android:fontFamily="@font/scdream7"
                android:textStyle="bold"
                />
        </RelativeLayout>


<!--        내정보-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100in"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintVertical_bias="1.0">


            <TextView
                android:id="@+id/text_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/scdream5"
                android:gravity="center_horizontal"
                android:text="내 정보"
                android:textColor="#3E3E3E"
                android:textSize="22dp"
                tools:ignore="MissingConstraints" />

            <!--            내 정보 박스-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/box_shadow"
                android:orientation="vertical"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_ID">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    app:layout_constraintTop_toBottomOf="@id/text_ID"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/scdream5"
                    android:gravity="center_horizontal"

                    android:textColor="#3E3E3E"
                    android:textSize="10pt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userImage"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/changeUserName"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/scdream3"
                    android:text="이름 변경 하기"
                    android:textColor="#757575"
                    android:textSize="6pt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userName"
                    style="?android:borderlessButtonStyle"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <!--            문의내역-->
            <TextView
                android:id="@+id/qna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scdream5"
                android:gravity="center_horizontal"
                android:text="문의 내역"
                android:textColor="#3E3E3E"
                android:textSize="22dp"
                tools:ignore="MissingConstraints" />

            <!--            문의 내역 박스-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/box_shadow"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qna">


                <TextView
                    android:id="@+id/qna_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/scdream3"
                    android:gravity="left|center_horizontal"
                    android:text="문의 하신 내역이 없습니다."
                    android:textColor="#3E3E3E"
                    android:textSize="8pt"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
